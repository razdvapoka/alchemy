.home
  width: 100%
  height: 100%
  &Box
    overflow: hidden
    width: 100%
    height: 100%
    position: relative

.info
  position: absolute
  left: 20px
  top: 20px
  border: 1px dotted blue
  padding: 20px
  &Close
    position: absolute
    right: 10px
    top: 10px
    border: none

.trash
  cursor: pointer
  position: absolute
  left: 20px
  bottom: 20px
  border: 1px dashed black
  width: 150px
  height: 150px
  display: flex
  align-items: center
  justify-content: center
  font-size: 60px

.menu
.menuOpen
  display: flex
  flex-wrap: wrap
  position: absolute
  top: 20px
  right: 0
  max-width: 300px
  transition: transform 0.3s ease
  &Button
    border: none
    position: absolute
    top: 0
    left: -20px
    transform: translateX(-100%)
    width: 50px
    height: 50px
    border: 1px dashed black
  &Item
    cursor: pointer
    display: flex
    align-items: center
    justify-content: center
    height: 50px
    width: 50px
    background-size: contain
    background-position: center
    background-repeat: no-repeat
    font-size: 30px
    line-height: 1
    margin: 5px

.menu
  transform: translateX(100%)
.menuOpen
  transform: translateX(0)

.scenes
  position: absolute
  right: 20px
  bottom: 20px
  border: 1px dotted black
  padding: 20px
  button
    border: none
  &Save
    margin-left: 10px
  &Items
    margin-top: 20px
  &Item
    padding-top: 5px
    display: flex
    justify-content: space-between
    cursor: pointer
  &Item + &Item
    margin-top: 5px
    border-top: 1px solid black

